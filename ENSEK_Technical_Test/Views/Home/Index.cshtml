@{
    ViewData["Title"] = "ENSEK";
}

<div class="container-fluid">
    <div class="text-center">
        <h1 class="display-4">ENSEK Technical Test</h1>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Upload Meter Reading</h3>
        </div>
        <div class="card-body">
            <label for="MeterReadingsUpload" class="form-label">Upload Meter Readings:</label> 
            <input type="file" name="MeterReadingsUpload" id="MeterReadingsUpload" class="form-control" accept=".csv" />
            <div id="MeterReadings" class="container mt-3 mb-3">
                <div class="d-flex justify-content-center d-none loading">
                  <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>

